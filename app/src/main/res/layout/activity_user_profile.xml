<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context="store.singto.singtostore.MeTab.UserProfileActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/colorWhite"
        android:id="@+id/userprofiletoolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/editUserAvatar"
        android:layout_marginTop="@dimen/dp40"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp20"
            android:text="@string/changeavatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/rightarrow"
            android:layout_centerVertical="true"
            android:id="@+id/smalluseravater"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40" />

        <ImageView
            android:id="@+id/rightarrow"
            android:tint="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp20"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/editUserName"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp20"
            android:text="@string/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/rightarrow2"
            android:layout_centerVertical="true"
            android:id="@+id/smallusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:id="@+id/rightarrow2"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp20"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
